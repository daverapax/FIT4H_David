<h1>Events</h1>
<h2>listing generated at: <%= Time.now %></h2>
<p>Zeige folgende <%= @events.size %> Veranstaltungen an:</p>
<p><%= link_to "Neues Event", new_event_path %></p>
<p>
	<table>
	<tr>
			<th>Name</th>
			<th>Ort</th>
			<th>Preis</th>
			<th>Beginn</th>
			<th>Beschreibung</th>
			<th>Bild</th>
			<th>Max. Teilnehmer</th>
			<th>Anmeldungen</th>
			<th>Show</th>
			<th>Edit</th>
			<th>DEL!</th>
	</tr>
	<% @events.each do |event| %>
		<tr> 
			<td><%= event.name %> </td>
			<td><%= event.location %> </td>
			<td><%= format_price(event) %> </td>
			<td><%= event.start_at %></td>
			<td><%= truncate(event.desciption, length: 15) %></td>
			<td><%= event.image %></td>
			<td><%= event.capacity %></td>
			<td><%= truncate(event.desciption, length: 15) %></td>
			<td><%= event.registrations.count %></td>
			<td><%= link_to "Show", event_path(event.id) %></td>
			<td><%= link_to "Edit", edit_event_path(event.id) %></td>
			<td><%= link_to "Delete", event_path(event.id), method: :delete, data: {confirm: "Sicher???"} %></td>
		</tr>
	<% end %>
	</table>
 <p><%= link_to "Alle Events", showall_events_path, type: "button", class: "button success" %> </p>

</p>